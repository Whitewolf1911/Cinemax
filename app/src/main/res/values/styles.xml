<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_h1" parent="@android:style/TextAppearance">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h2" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h3" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h4" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h5" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h6" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_h7" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cinemax_button_extra_large" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/text_h4</item>
        <item name="android:backgroundTint">@color/primary_blue_accent</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cinemax.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CinemaxTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_layout_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_layout_radius</item>
        <item name="hintTextColor">@color/text_white</item>
        <item name="android:textColorHint">@color/text_white</item>
    </style>

    <style name="CinemaxTextInputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAppearance">@style/text_h5</item>
    </style>

    <style name="CinemaxCheckBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primary_blue_accent</item>
        <item name="android:textColorSecondary">@color/primary_blue_accent</item>
    </style>

</resources>
