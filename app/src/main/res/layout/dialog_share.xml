<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_232dp"
        app:cardCornerRadius="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:strokeColor="@color/primary_dark">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="@dimen/_32dp"
                android:layout_height="@dimen/_32dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="@dimen/_12dp"
                app:icon="@drawable/ic_close"
                app:iconGravity="textEnd"
                app:iconSize="@dimen/_32dp"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/shareTextView"
                style="@style/text_h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_64dp"
                android:text="@string/share_to"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/facebookButton"
                style="@style/CinemaxRoundIconButtonStyle"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_48dp"
                android:backgroundTint="@color/blue_facebook"
                app:icon="@drawable/ic_facebook"
                app:layout_constraintEnd_toStartOf="@+id/instagramButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shareTextView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/instagramButton"
                style="@style/CinemaxRoundIconButtonStyle"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                app:icon="@drawable/ic_instagram"
                app:iconSize="@dimen/_48dp"
                app:layout_constraintEnd_toStartOf="@+id/messengerButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/facebookButton"
                app:layout_constraintTop_toTopOf="@+id/facebookButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/messengerButton"
                style="@style/CinemaxRoundIconButtonStyle"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                app:icon="@drawable/ic_messenger"
                app:iconSize="@dimen/_48dp"
                app:layout_constraintEnd_toStartOf="@+id/telegramButton"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/instagramButton"
                app:layout_constraintTop_toTopOf="@+id/facebookButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/telegramButton"
                style="@style/CinemaxRoundIconButtonStyle"
                android:layout_width="@dimen/_48dp"
                android:layout_height="@dimen/_48dp"
                app:icon="@drawable/ic_telegram"
                app:iconSize="@dimen/_48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/messengerButton"
                app:layout_constraintTop_toTopOf="@+id/facebookButton" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
